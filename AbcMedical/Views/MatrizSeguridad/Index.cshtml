<div class="panel">
<header class="panel-heading">
    Matriz de Seguridad
</header>
<div class="panel-body" style="padding-bottom:40px;">

    @model IEnumerable<Entities.Seguridad.Permiso>

    @{
        ViewBag.Title = "Index";
        Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
    }




    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Perfil.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModuloAplicacion)
            </th>
            
           
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Perfil.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Opcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ModuloAplicacion)
                </td>
                
            </tr>
        }

    </table>
</div>
</section>