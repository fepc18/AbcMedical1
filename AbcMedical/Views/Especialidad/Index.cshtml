<section class="panel">
    <header class="panel-heading">
        Especialidades
    </header>
    <div class="panel-body" style="padding-bottom:40px;">
        @model IEnumerable<Entities.Administracion.Especialidad>

        @{
            ViewBag.Title = "Index";
            Layout = "~/Views/Shared/_LayoutAdministration.cshtml";
        }

        <p>
            @Html.ActionLink("Crear Especialidad", "Create", null, new { @class = "btn btn-primary" })
        </p>

        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.EspecialidadId }) |                        
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.EspecialidadId })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>