<section class="panel">
    <header class="panel-heading">
        Usuarios
    </header>
    <div class="panel-body" style="padding-bottom:40px;">
        @model IEnumerable<Entities.Seguridad.Usuario>

        @{
            ViewBag.Title = "Index";
            Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
        }

        <p>
            @Html.ActionLink("Crear Usuario", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Perfil)
                </th>
                
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bloqueado)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CorreoElectronico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Perfil.Descripcion)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bloqueado)
                    </td>
                    
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.UsuarioId }) |
                        @Html.ActionLink("Reasignar Clave", "ReasignarClave", new { id = item.UsuarioId }) |
                        @Html.ActionLink("Desbloquear", "Desbloquear", new { id = item.UsuarioId })
                    </td>
                </tr>
            }

        </table>
    </div>
</section>