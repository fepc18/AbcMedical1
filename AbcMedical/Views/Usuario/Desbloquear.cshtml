<section class="panel">
    <header class="panel-heading">
        Usuarios
    </header>
    <div class="panel-body" style="padding-bottom:40px;">
        @model Entities.Seguridad.Usuario

        @{
            ViewBag.Title = "Delete";
            Layout = "~/Views/Shared/_LayoutSecurity.cshtml";
        }

       
            <h3>Desbloquar</h3>

            <h4>Está seguro de desbloquear el usuario: @Html.DisplayFor(model => model.Login)?</h4>
            <div>

                <hr />

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.UsuarioId)
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-offset-2 col-md-5">
                                <button type="submit" class="btn btn-primary"><i class="fa fa-trash-o"></i> Guardar</button>
                            </div>
                            <div class="col-md-4">

                                @Html.ActionLink("Regresar al listado", "Index", null, new { @class = "btn btn-warning" })
                            </div>
                        </div>
                    </div>

                }
            </div>
    </div>
</section>
