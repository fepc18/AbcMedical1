<section class="panel">
    <header class="panel-heading">
        Profesionales
    </header>
    <div class="panel-body" style="padding-bottom:40px;">
        @model Entities.ArchivoDigital.CargarArchivoDigital
        @{
            ViewBag.Title = "Create";
            Layout = "~/Views/Shared/_LayoutAdministration.cshtml";
        }
        <h4>Carga de firma </h4>
        @using (Html.BeginForm("UploadSign", "Profesional", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal tasi-form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.Hidden("ProfesionalId", ViewData["ProfesionalId"])
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(x => x.Archivo, "Archivo", new { @class = "control-label col-md-2" })
                    <div class="col-md-9 col-xs-11">
                        @Html.TextBoxFor(m => m.Archivo, new { type = "file", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Archivo, String.Empty, new { @class = "help-inline" })
                        <br />
                        <div class="progress" style="display: none;">
                            <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em; width: 2%">
                                <span>2%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </div>
            </div>

        }

    </div>
</section>