<section class="panel">
    <header class="panel-heading">
        Profesionales
    </header>
    <div class="panel-body" style="padding-bottom:40px;">
        @model IEnumerable<Entities.Administracion.Profesional>

        @{
            ViewBag.Title = "Index";
            Layout = "~/Views/Shared/_LayoutAdministration.cshtml";
        }

        <p>
            @Html.ActionLink("Crear Profesional", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>

                
                
                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Identificacion)
                </th>
                <th>
                    Nombre
                </th>                                
                <th>
                    @Html.DisplayNameFor(model => model.NumeroRegistro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario.Login)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                   
                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TipoIdentificacion.Abreviatura) -
                        @Html.DisplayFor(modelItem => item.Identificacion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrimerNombre)
                   
                        @Html.DisplayFor(modelItem => item.SegundoNombre)
                   
                        @Html.DisplayFor(modelItem => item.PrimerApellido)
                    
                        @Html.DisplayFor(modelItem => item.SegundoApellido)
                    </td>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeroRegistro)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Usuario.Login)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.ProfesionalId }) |                        
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.ProfesionalId }) | 
                        @Html.ActionLink("Cargar Firma", "UploadSign", new { id = item.ProfesionalId }) | 
                    </td>
                </tr>
            }

        </table>
    </div>
</section>