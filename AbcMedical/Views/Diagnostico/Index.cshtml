<section class="panel">
    <header class="panel-heading">
        Diagnósticos
    </header>
    <div class="panel-body" style="padding-bottom:40px;">
        @model IEnumerable<Entities.Administracion.Diagnostico>

        @{
            ViewBag.Title = "Index";
            Layout = "~/Views/Shared/_LayoutAdministration.cshtml";
        }

        <p>
           @Html.ActionLink("Crear Diagnóstico", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table">
            <tr>

                <th>
                    @Html.DisplayNameFor(model => model.Codigo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EdadInferior)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.EdadSuperior)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Activo)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Codigo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EdadInferior)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EdadSuperior)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Activo)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.DiagnosticoId }) |                        
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.DiagnosticoId })
                    </td>
                </tr>
            }

        </table>
</div>
</section>